
@{
    ViewBag.Title = "login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
   
    <section id="inner-headline">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="pageTitle">Log In</h2>
                </div>
            </div>
        </div>
    </section>
    <div class="jumbotron vertical-center">

        <div class=" container text-center">
            <form action="/Home/check" method="post">
                <div>
                    <input name="name" style="width:300px " type="text" class="form-control center-block" placeholder="User Name">
                </div>

                <br />

                <div>
                    <input name="pass" style="width:300px " type="password" class="form-control center-block" id="exampleInput2" placeholder="Password">
                </div>

                <br />
                
                    @if (TempData["n"] != null)
                        {
                            <div>
                                <label style="color:red;"> Invalid Username And password </label>
                            </div>
                            TempData["n"] = null;
                        }
                    
                
         
                <input style="width:300px " class="btn btn-default" type="submit" value="login" />
            </form>
            <div>
                <a href="/Patient/SignUp">Are you a new user??   Create Account</a>
            </div>

            <br />
        </div>
    </div>
</body>
