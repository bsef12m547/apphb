@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

<body>

    <div id="page-wrapper">
        <div id="page-inner">


            <div class="row">
                <div class="col-md-12">
                    <h1 class="page-header">
                        Contact Us<small> here</small>
                    </h1>
                    <section id="inner-headline">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-12">
                                </div>
                            </div>
                        </div>
                    </section>
                    <section id="content">

                        <div class="container">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="contact-form">
                                        <form action="@Url.Action("SaveContact","Doctor")" id="contact-form" role="form" novalidate="novalidate">
                                            <div class="form-group has-feedback">
                                                <label for="name">Name*</label>
                                                <input type="text" class="form-control" id="name" name="name" placeholder="" required>
                                                <i class="fa fa-user form-control-feedback"></i>
                                            </div>
                                            <div class="form-group has-feedback">
                                                <label for="email">Email*</label>
                                                <input type="email" class="form-control" id="email" name="Email" placeholder="" required>
                                                <i class="fa fa-envelope form-control-feedback"></i>
                                            </div>
                                            <div class="form-group has-feedback">
                                                <label for="message">Message*</label>
                                                <textarea class="form-control" rows="6" id="message" name="Message" placeholder="" required></textarea>
                                                <i class="fa fa-pencil form-control-feedback"></i>
                                            </div>
                                            <input type="submit" value="Submit" class="btn btn-default">
                                        </form>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </section>

                </div>
            </div>
            <footer>
                <p>All right reserved. Template by: <a href="http://webthemez.com">Mehreen</a></p>
            </footer>
        </div>
        <!-- /. PAGE INNER  -->
    </div>

</body>
